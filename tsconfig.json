{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "types": [
      "node",
      "jest"
    ],
    "declaration": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "outDir": "build",
    "lib": [
      "dom",
      "es2017",
      "esnext.asynciterable"
    ],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
